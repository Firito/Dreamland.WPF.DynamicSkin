<UserControl x:Class="Dreamland.WPF.DynamicSkin.Demo.Controls.BilingualTextBlock"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:skin="clr-namespace:Dreamland.WPF.DynamicSkin;assembly=Dreamland.WPF.DynamicSkin">
    <StackPanel>
        <!-- Chinese text (primary) -->
        <TextBlock FontSize="{Binding ChineseFontSize, ElementName=root}"
                   FontWeight="{Binding ChineseFontWeight, ElementName=root}"
                   Foreground="{skin:DynamicResource ForegroundBrush}" Text="{Binding ChineseText, ElementName=root}"
                   TextWrapping="Wrap" />

        <StackPanel Margin="0,4,0,0" Orientation="Horizontal">
            <Border Width="2" Margin="4,0" Background="#FF1E90FF" />
            <!-- English text (secondary, lighter and smaller) -->
            <TextBlock FontSize="{Binding EnglishFontSize, ElementName=root}"
                       Foreground="{skin:DynamicResource ForegroundBrush}" Opacity="0.6"
                       Text="{Binding EnglishText, ElementName=root}" TextWrapping="Wrap" />
        </StackPanel>
    </StackPanel>
</UserControl>